@model Bookstore.Web.Models.Books.BookUpdateViewModel


@{
    ViewBag.Title = "Update Book";
}


<div class="container mt-5">
    <form id="updateBookForm" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" required />
        </div>

        <div class="form-group">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" required />
        </div>

        <div class="form-group">
            <label asp-for="Genre"></label>
            <select asp-for="Genre" class="form-control" asp-items="Model.GenreList">
                <option value="">-- Select Genre --</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="PublishedDate"></label>
            <input asp-for="PublishedDate" class="form-control" type="date" required />
        </div>
        <div class="form-group">
            <label asp-for="Inventory.Amount"></label>
            <input asp-for="Inventory.Amount" type="number" class="form-control" min="0" step="1" />
        </div>

        <div class="form-group">
            <label asp-for="Inventory.BuyPrice"></label>
            <div class="input-group">
                <input asp-for="Inventory.BuyPrice" type="number" class="form-control" min="0" step="0.01" />
                <span class="input-group-text">₫</span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Inventory.SellPrice"></label>
            <div class="input-group">
                <input asp-for="Inventory.SellPrice" type="number" class="form-control" min="0" step="0.01" />
                <span class="input-group-text">₫</span>
            </div>
        </div>


        <button type="submit" class="btn btn-primary">Save</button>
    </form>

</div>

@section scripts
{
}