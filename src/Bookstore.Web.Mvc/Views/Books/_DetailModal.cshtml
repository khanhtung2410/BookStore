@using Bookstore.Entities.Books
@using Bookstore.Web.Models.Books
@using Bookstore.Web.Models.Common.Modals

@{
    Layout = null;
}
<div class="modal fade" id="BookViewModal" tabindex="-1" aria-labelledby="BookViewModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(@L("DetailBook")))

            <div class="modal-body">
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <button class="nav-link active" id="book-tab" data-toggle="tab" data-target="#view-book-details" type="button" role="tab">@L("BookDetails")</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link" id="edition-tab" data-toggle="tab" data-target="#view-edition-details" type="button" role="tab">@L("EditionDetails")</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link" id="images-tab"  data-toggle="tab" data-target="#view-book-images" type="button" role="tab">@L("Images")</button>
                    </li>
                </ul>

                <div class="tab-content mt-3">
                    <!-- Book Details -->
                    <div class="tab-pane fade show active" id="view-book-details" role="tabpanel" aria-labelledby="book-tab">
                        <div class="mb-3 row">
                            <label class="col-md-3 col-form-label fw-bold">@L("Title")</label>
                            <div class="col-md-9">
                                <p class="form-control-plaintext">@Model.Title</p>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label class="col-md-3 col-form-label fw-bold">@L("Author")</label>
                            <div class="col-md-9">
                                <p class="form-control-plaintext">@Model.Author</p>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label class="col-md-3 col-form-label fw-bold">@L("Genre")</label>
                            <div class="col-md-9">
                                <p class="form-control-plaintext">@Model.Genre</p>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label class="col-md-3 col-form-label fw-bold">@L("Description")</label>
                            <div class="col-md-9">
                                <p class="form-control-plaintext">@Model.Description</p>
                            </div>
                        </div>
                    </div>

                    <!-- Edition Details -->
                    <div class="tab-pane fade" id="view-edition-details" role="tabpanel" aria-labelledby="edition-tab">
                        <div class="mb-3 row">
                            <label class="col-md-3 col-form-label fw-bold">@L("SelectEdition")</label>
                            <div class="col-md-9">
                                <select id="selectEditionView" class="form-select form-control" disabled>
                                    <option value="">-- Select an edition --</option>
                                    @foreach (var ed in Model.Editions)
                                    {
                                        <option value="@ed.Id"
                                                data-format="@ed.Format.ToString()"
                                                data-isbn="@ed.ISBN"
                                                data-publisher="@ed.Publisher"
                                                data-publisheddate="@ed.PublishedDate.ToString("yyyy-MM-dd")">
                                            @ed.Format.ToString() - @ed.ISBN
                                        </option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div id="editionFieldsView" class="mt-3">
                            <div class="mb-3 row">
                                <label class="col-md-3 col-form-label fw-bold">@L("Format")</label>
                                <div class="col-md-9">
                                    <p class="form-control-plaintext" id="formatView"></p>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label class="col-md-3 col-form-label fw-bold">@L("ISBN")</label>
                                <div class="col-md-9">
                                    <p class="form-control-plaintext" id="isbnView"></p>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label class="col-md-3 col-form-label fw-bold">@L("Publisher")</label>
                                <div class="col-md-9">
                                    <p class="form-control-plaintext" id="publisherView"></p>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label class="col-md-3 col-form-label fw-bold">@L("PublishedDate")</label>
                                <div class="col-md-9">
                                    <p class="form-control-plaintext" id="publishedDateView"></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">@L("Close")</button>
            </div>
        </div>
    </div>
</div>
