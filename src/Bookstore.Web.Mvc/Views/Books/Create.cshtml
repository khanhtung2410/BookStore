@model Bookstore.Web.Models.Books.BookCreatePageViewModel


@{
    ViewBag.Title = "Add Book";
}


<div class="container mt-5">
    <form id="createBookForm"  method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label asp-for="Book.Title"></label>
            <input asp-for="Book.Title" class="form-control" required/>
        </div>

        <div class="form-group">
            <label asp-for="Book.Author"></label>
            <input asp-for="Book.Author" class="form-control" required/>
        </div>

        <div class="form-group">
            <label asp-for="Book.Genre"></label>
            <select asp-for="Book.Genre" class="form-control" asp-items="Model.Book.GenreList">
                <option value="">-- Select Genre --</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Book.Description"></label>
            <textarea asp-for="Book.Description" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Book.PublishedDate"></label>
            <input asp-for="Book.PublishedDate" class="form-control" type="date" required/>
        </div>
        <div class="form-group">
            <label asp-for="Book.Inventory.StockQuantity"></label>
            <input asp-for="Book.Inventory.StockQuantity" type="number" class="form-control" min="0" step="1" />
        </div>

        <div class="form-group">
            <label asp-for="Book.Inventory.BuyPrice"></label>
            <div class="input-group">
                <input asp-for="Book.Inventory.BuyPrice" type="number" class="form-control" min="0" step="0.01" />
                <span class="input-group-text">₫</span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Book.Inventory.SellPrice"></label>
            <div class="input-group">
                <input asp-for="Book.Inventory.SellPrice" type="number" class="form-control" min="0" step="0.01" />
                <span class="input-group-text">₫</span>
            </div>
        </div>


        <button type="submit" class="btn btn-primary">Save</button>
    </form>

</div>

@section scripts
{
    <script src="~/view-resources/Views/Books/createBook.js"></script>
}