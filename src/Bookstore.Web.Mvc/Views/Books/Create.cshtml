@model Bookstore.Web.Models.Books.BookCreateViewModel

@{
    ViewBag.Title = "Add Book";
}

<div class="container mt-5 mb-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex align-items-center px-3">
            <h4 class="mb-0 flex-grow-1">@ViewBag.Title</h4>
            <a asp-action="Index" class="btn btn-dark btn-sm">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to List
            </a>
        </div>

        <div class="card-body">
            <form id="createBookForm" method="post">
                @Html.AntiForgeryToken()

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label asp-for="Title" class="form-label fw-semibold"></label>
                        <input asp-for="Title" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Author" class="form-label fw-semibold"></label>
                        <input asp-for="Author" class="form-control" required />
                    </div>
                </div>

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label asp-for="Genre" class="form-label fw-semibold"></label>
                        <select asp-for="Genre" class="form-select" asp-items="Model.GenreList">
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Description" class="form-label fw-semibold"></label>
                        <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                    </div>
                </div>

                <hr />

                <h5 class="text-secondary mb-3">📚 Editions</h5>
                <div id="edition-container">
                    @for (int i = 0; i < Model.Editions.Count(); i++)
                    {
                        <div class="edition-item border rounded p-3 mb-3 bg-light">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="Editions[@i].Format" class="form-label fw-semibold">Format</label>
                                    <select asp-for="Editions[@i].Format"
                                            class="form-select"
                                            asp-items="Model.Editions[@i].FormatList">
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="Editions[@i].PublishedDate" class="form-label fw-semibold">Published Date</label>
                                    <input asp-for="Editions[i].PublishedDate" type="date" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Editions[@i].Publisher" class="form-label fw-semibold">Publisher</label>
                                    <input asp-for="Editions[i].Publisher" class="form-control" />
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="Editions[@i].ISBN" class="form-label fw-semibold">ISBN</label>
                                    <input asp-for="Editions[i].ISBN" class="form-control" />
                                </div>
                            </div>

                            <h6 class="mt-4 text-muted">Inventory</h6>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label asp-for="Editions[@i].Inventory.StockQuantity" class="form-label fw-semibold">Stock</label>
                                    <input asp-for="Editions[i].Inventory.StockQuantity" class="form-control" />
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="Editions[@i].Inventory.BuyPrice" class="form-label fw-semibold">Buy Price</label>
                                    <input asp-for="Editions[i].Inventory.BuyPrice" class="form-control" />
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="Editions[@i].Inventory.SellPrice" class="form-label fw-semibold">Sell Price</label>
                                    <input asp-for="Editions[i].Inventory.SellPrice" class="form-control" />
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="d-flex justify-content-between align-items-center mt-3">
                    <button type="button" class="btn btn-outline-secondary" id="addEditionBtn">
                        <i class="bi bi-plus-circle me-1"></i> Add Another Edition
                    </button>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save me-1"></i> Save Book
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/view-resources/Views/Books/createBook.js"></script>
}
