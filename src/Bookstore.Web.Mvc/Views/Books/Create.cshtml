@model Bookstore.Web.Models.Books.BookCreateViewModel

@{
    ViewBag.Title = "Add Book";
}

<div class="container mt-5 mb-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex align-items-center px-3">
            <h4 class="mb-0 flex-grow-1">@ViewBag.Title</h4>
            <a asp-action="Index" class="btn btn-dark btn-sm">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to List
            </a>
        </div>

        <div class="card-body">
            <form id="createBookForm" method="post">
                @Html.AntiForgeryToken()

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label asp-for="Title" class="form-label fw-semibold"></label>
                        <input asp-for="Title" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Author" class="form-label fw-semibold"></label>
                        <input asp-for="Author" class="form-control" required />
                    </div>
                </div>

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label asp-for="Genre" class="form-label fw-semibold"></label>
                        <select asp-for="Genre" class="form-select" asp-items="Model.GenreList">
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Description" class="form-label fw-semibold"></label>
                        <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                    </div>
                </div>

                <hr />

                <h5 class="text-secondary mb-3">📚 Editions</h5>
                <div id="edition-container">
                </div>

                <div class="d-flex justify-content-between align-items-center mt-3">
                    <button type="button" class="btn btn-outline-secondary" id="addEditionBtn">
                        <i class="bi bi-plus-circle me-1"></i> Add Another Edition
                    </button>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save me-1"></i> Save Book
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/view-resources/Views/Books/createBook.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

}
