                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>@L("Title")</th>
                                        <th>@L("Author")</th>
                                        <th>@L("Genre")</th>
                                        <th style="width: 150px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

