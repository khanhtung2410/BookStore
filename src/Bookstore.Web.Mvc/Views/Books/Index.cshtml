@model Bookstore.Web.Models.Books.BookListViewModel

@{
    ViewBag.Title = "Bookstore Home";
}

<div class="container mt-5">
    <h1 class="mb-4">Books</h1>

    @if (Model.Books != null && Model.Books.Any())
    {
        <div class="container my-4">
            <div class="row g-4">
                @foreach (var book in Model.Books)
                {
                    <div class="col-md-3">
                        <div class="card h-100 border border-secondary">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@book.Title</h5>
                                <p class="card-text mb-1"><strong>Author:</strong> @book.Author</p>
                                <p class="card-text mb-3"><strong>Genre:</strong> @book.Genre</p>
                                <div class="mt-auto">
                                    <a href="@Url.Action("Details", "Books", new { id = book.Id })" class="btn btn-primary btn-sm">View Details</a>
                                    <a href="@Url.Action("AddToCart", "Cart", new { id = book.Id })" class="btn btn-success btn-sm">Add to Cart</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>


        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", "Books", new { page = i })">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="alert alert-info mt-4">
            No books available.
        </div>
    }
</div>
